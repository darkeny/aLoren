datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
enum Sexo {
  MALE
  FEMALE
}

enum Role {
  USER
  ADMIN
}

enum TypeRoom {
  SINGLE_ROOM
  DOUBLE_ROOM
  KING_DOUBLE_ROOM
  LUXURY_DOUBLE_ROOM
}

enum Stamps {
  VERIFIED
  UNVERIFIED
}

model User {
  id Int @id @default(autoincrement())
  name String
  sexo Sexo
  email String @unique
  role Role @default(USER)
  verified Stamps @default(UNVERIFIED)
  
  
}

model Rooms {
  id Int @id @default(autoincrement())
  type TypeRoom @unique
  description String @db.VarChar(500)
  price Decimal
}






